@using System.Web.UI.WebControls
@model Veritabani_Homework.Models.Entity.Tbl_AdminLogin
@{
    Layout = null;
}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link href="~/Content/Admin/style.css" rel="stylesheet" />
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css">

<div class="container">
    <div class="card card-login mx-auto text-center bg-dark">
        <div class="card-header mx-auto bg-dark">
            @*<span> <img src="https://amar.vote/assets/img/amarVotebd.png" class="w-75" alt="Logo"> </span><br />*@
            <span>
                <img src="~/Content/img_admin/Cover.png" class="width=100px" height="100" style="border-radius: 50%; margin-bottom: 8px;"/>
                @*<img src="~/Content/img_admin/2.foto.png"/>*@
            </span>
            <br />
            <span class="logo_title mt-5"> Admin Login </span>

        </div>
        <div class="card-body">
            @using (Html.BeginForm("Authorize","AdminLogin", FormMethod.Post))
            {
                <form action="/" method="post">
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        @*<input type="text" name="email" class="form-control" placeholder="Username">*@
                        @Html.TextBoxFor(k => k.UserName, new { @class = "form-control", placeholder = "Username" })
                        <div class="input-group">
                            @Html.ValidationMessageFor(k => k.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        @*<input type="password" name="password" class="form-control" placeholder="Password">*@
                        @Html.TextBoxFor(k => k.Password, new { @class = "form-control", placeholder = "Password", type = "password" })
                        <div class="input-group">
                            @Html.ValidationMessageFor(k => k.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    
                        @*<div class="input-group-prepend">*@
                            @*<label class="field-validation-error">@Html.DisplayFor(k => k.LoginErrorMessage)</label>*@
                            @*<label class="field-validation-error">@Html.DisplayFor(k=>k.LoginErrorMessage)</label>*@
                        @*</div>*@
                    
                    <div class="form-group">
                        <input type="submit" name="btn" value="Login" class="btn btn-outline-danger float-right login_btn">
                    </div>

                </form>
            }
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>